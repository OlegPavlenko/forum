<%= form_for([@hat, @hat.posts.build]) do |f| %>

  <%= f.text_field :name, placeholder: "name", maxlength: 15, id: "name" %>
  <%= f.text_field :theme, placeholder: "theme", maxlength: 15, id: "theme" %>
  <%= f.text_area :post, placeholder: "post", id: "post"%>
  <%= f.submit "Send" %>

<% end %>
